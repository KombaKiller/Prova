@model ProvaAlexandre.Dominio.Filho

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Filho</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaeId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaeId",(SelectList)ViewBag.ListaDeMae)
            @Html.ValidationMessageFor(model => model.MaeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FuncionarioId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("FuncionarioId",(SelectList)ViewBag.ListaDeFuncionario)
            @Html.ValidationMessageFor(model => model.FuncionarioId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sexo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sexo)
            @Html.ValidationMessageFor(model => model.Sexo)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
