@model ProvaAlexandre.Dominio.Equipamento

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Equipamento</legend>

        @Html.HiddenFor(model => model.Equipamento_id)
        
        <div class="editor-label">
            <label for="Cliente_id">Cliente Responsável</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("Cliente_Id",(SelectList)ViewBag.ListaDeCliente)
            @Html.ValidationMessageFor(model => model.Cliente_id)
        </div>

        <div class="editor-label">
            <label for="Funcionario_id">Funcionario Responsável</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("Funcionario_Id",(SelectList)ViewBag.ListaDeFuncionario)
            @Html.ValidationMessageFor(model => model.Funcionario_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Marca)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Marca)
            @Html.ValidationMessageFor(model => model.Marca)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Modelo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Modelo)
            @Html.ValidationMessageFor(model => model.Modelo)
        </div>

        <div class="editor-label">
            <label>Número de Série</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NSerie)
            @Html.ValidationMessageFor(model => model.NSerie)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Cancelar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
