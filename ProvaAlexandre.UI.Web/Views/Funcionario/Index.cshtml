@model IEnumerable<ProvaAlexandre.Dominio.Funcionario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Funcionario", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            Função
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funcao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.FuncionarioId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.FuncionarioId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.FuncionarioId })
        </td>
    </tr>
}

</table>
