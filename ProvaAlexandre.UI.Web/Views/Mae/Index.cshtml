@model IEnumerable<ProvaAlexandre.Dominio.Mae>

@{
    ViewBag.Title = "Index";
}

<h2>Mae</h2><br />

<p>
    @Html.ActionLink("Cadastrar Nova Mae", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.MaeId }) |
            @Html.ActionLink("Detailhes", "Detalhes", new { id=item.MaeId }) |
            @Html.ActionLink("Deletar", "Excluir", new { id=item.MaeId })
        </td>
    </tr>
}

</table>
